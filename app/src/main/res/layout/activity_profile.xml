<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmput301f16t11.a2b.ProfileActivity">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207dp"
        android:id="@+id/userName"
        android:paddingTop="3px"
        android:paddingBottom="3px" />

    <TextView
        android:text="888-888-8888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumberTextView"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="myemail@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailText"
        android:layout_below="@+id/phoneNumberTextView"
        android:layout_centerHorizontal="true"
        android:paddingTop="3px"
        android:paddingBottom="3px" />


    <TextView
        android:text="Passenger rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passengerRating"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:paddingTop="30px"
        android:paddingBottom="3px" />

    <TextView
        android:text="Driver rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driverRating"
        android:layout_below="@+id/passengerRating"
        android:layout_centerHorizontal="true" />



    <!--<Button-->
        <!--android:text="Edit"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/editProfile"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_toStartOf="@+id/userName" />-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/iconuserdefault"
        android:id="@+id/imageView2"
        android:cropToPadding="true"
        android:adjustViewBounds="true"
        android:layout_marginBottom="23dp"
        android:layout_alignBottom="@+id/userName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editProfile"
        android:layout_below="@+id/emailText"
        android:layout_alignStart="@+id/phoneNumberTextView" />

</RelativeLayout>
