<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <TextView android:id="@+id/request_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "16dp"
        android:layout_marginBottom="16dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/request_detail_title"/>

    <LinearLayout android:id="@+id/dialog_rideComplete_driverLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginBottom="8dp">

        <TextView android:id="@+id/request_detail_driver_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/rideComplete_driverTitle"/>

        <TextView android:id="@+id/request_detail_driver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:text="Test Driver"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/dialog_rideComplete_riderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:weightSum="3">

        <TextView android:id="@+id/request_detail_rider_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/rideComplete_riderTitle"/>

        <TextView android:id="@+id/request_detail_rider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Test Rider"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/dialog_rideComplete_startLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:weightSum="3">

        <TextView android:id="@+id/request_detail_pickup_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/rideComplete_startTitle"/>

        <TextView android:id="@+id/request_detail_pickup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Test Pickup"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/dialog_rideComplete_endLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:weightSum="3">

        <TextView android:id="@+id/request_detail_dest_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/rideComplete_endTitle"/>

        <TextView android:id="@+id/request_detail_dropoff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Test Dropoff"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/dialog_rideComplete_fareLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:weightSum="3">

        <TextView android:id="@+id/request_detail_fare_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/rideComplete_fareTitle"/>

        <TextView android:id="@+id/request_detail_fare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Test Fare"/>
    </LinearLayout>

    <LinearLayout  android:id="@+id/request_detail_statusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:weightSum="3">

        <TextView android:id="@+id/request_detail_status_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/status"/>

        <TextView android:id="@+id/request_detail_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="placeholder"/>


    </LinearLayout>

    <LinearLayout android:id="@+id/activity_requestDetail_descrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">
        <LinearLayout android:id="@+id/activity_requestDetail_descripTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:weightSum="3">
            <TextView android:id="@+id/activity_requestDetail_descripTitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/requestInfo_descripTitle" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <TextView android:id="@+id/activity_requestDetail_descripText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a test description"/>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="4">
    <Button android:id="@+id/request_detail_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/delete" />

    <Button android:id="@+id/request_detail_accept"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/accept" />

    <Button android:id="@+id/request_detail_pay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/pay" />

        <Button android:id="@+id/request_detail_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textSize="10sp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:text="@string/complete" />

    </LinearLayout>

    <TextView android:id="@+id/willing_drivers_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "16dp"
        android:layout_marginBottom="16dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="@string/willing_drivers"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/accepted_list" />


</LinearLayout>