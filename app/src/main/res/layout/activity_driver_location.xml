<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmput301f16t11.a2b.driverLocationActivity"
    tools:layout="@android:layout/list_content">


    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:id="@+id/searchByLocation"
        android:layout_gravity="bottom|right"
        android:text="Search By Location"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:id="@+id/searchByKeyword"
        android:layout_gravity="bottom|left"
        android:text="Search By Keyword"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/confirmSearch"
        android:layout_gravity="top|center"
        android:text="Confirm Search"
        android:layout_marginTop="5dp" />

</fragment>
