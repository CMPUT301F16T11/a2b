<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:layout_gravity="center">

    <include layout="@layout/open_request_info_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout android:id="@+id/dialog_markerInfo_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal">

        <Button android:id="@+id/dialog_markerInfo_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="@string/markerInfo_accept"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>

        <Button android:id="@+id/dialog_markerInfo_cancel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/markerInfo_cancel"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>